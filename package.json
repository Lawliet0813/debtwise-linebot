{
  "name": "line-liff-auto",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:liff": "npm --workspace apps/liff-app run dev",
    "dev:bot": "npm --workspace apps/bot run dev",
    "build": "npm --workspace apps/liff-app run build",
    "test": "npm-run-all --parallel test:*",
    "test:liff": "npm --workspace apps/liff-app run test",
    "test:bot": "npm --workspace apps/bot run test",
    "setup": "node AGENTS/scripts/setup.js",
    "bot:ngrok": "cd apps/bot && npx ngrok http 3000",
    "start": "node apps/bot/src/index.js",
    "richmenu:create": "node apps/bot/scripts/richmenu-create.js --dry-run",
    "richmenu:upload": "node apps/bot/scripts/richmenu-upload-image.js --dry-run",
    "richmenu:link": "node apps/bot/scripts/richmenu-link-user.js --dry-run",
    "richmenu:unlink": "node apps/bot/scripts/richmenu-unlink-user.js --dry-run",
    "richmenu:delete:all": "node apps/bot/scripts/richmenu-delete-all.js --dry-run",
    "health": "node scripts/health-check.js",
    "prepare": "husky install || true",
    "auto": "node AGENTS/scripts/auto-run.js"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "npm-run-all": "^4.1.5"
  }
}
