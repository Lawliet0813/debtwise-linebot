{
  "name": "line-liff-auto",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:liff": "npm --workspace apps/liff-app run dev",
    "dev:bot": "npm --workspace apps/bot run dev",
    "build": "npm-run-all --parallel build:*",
    "build:liff": "npm --workspace apps/liff-app run build",
    "build:bot": "npm --workspace apps/bot run build",
    "test": "npm-run-all --parallel test:*",
    "test:liff": "npm --workspace apps/liff-app run test",
    "test:bot": "npm --workspace apps/bot run test",
    "setup": "node AGENTS/scripts/setup.js",
    "bot:ngrok": "node apps/bot/scripts/ngrok-template.js",
    "prepare": "husky install || true",
    "auto": "node AGENTS/scripts/auto-run.js"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "npm-run-all": "^4.1.5"
  }
}
